<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="1">

        <record id="property_res_partner_default_sale_journal_id" model="ir.property">
            <field name="name">Default sale journal</field>
            <field name="fields_id" ref="sale_partner_default_journal.field_res_partner_default_sale_journal_id" />
            <field name="value" eval="'account.journal,%s' % obj([]).search([('type', '=', 'sale'), ('company_id', '=', ref('base.main_company'))], limit=1).id" model="account.journal" />
            <field name="company_id" ref="base.main_company"/>
        </record>

        <!--  SET where do the returns invoices need to be placed by setting
              this property -->

        <record id="property_res_partner_default_return_journal_id" model="ir.property">
            <field name="name">Default sale returns journal</field>
            <field name="fields_id" ref="sale_partner_default_journal.field_res_partner_default_return_journal_id" />
            <field name="value" eval="'account.journal,%s' % obj([]).search([('type', '=', 'purchase'), ('company_id', '=', ref('base.main_company'))], limit=1).id" model="account.journal" />
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</openerp>
